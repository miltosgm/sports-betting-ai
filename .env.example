# Kick Lab AI - Environment Variables Template
# Copy this to .env and fill in your values

# ==================== TELEGRAM BOT ====================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Channel ID (starts with -100 or @channelname)
TELEGRAM_CHANNEL_ID=@kicklabai

# Admin user IDs (comma-separated)
TELEGRAM_ADMIN_IDS=123456789,987654321

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///data/kicklab.db

# ==================== API KEYS ====================
# The Odds API (for odds data)
ODDS_API_KEY=your_odds_api_key_here

# Football-Data.org (for match data)
FOOTBALL_DATA_API_KEY=your_football_data_key_here

# ==================== FLASK ====================
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# ==================== EMAIL (Optional) ====================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@kicklabai.com

# ==================== STRIPE (Optional) ====================
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
